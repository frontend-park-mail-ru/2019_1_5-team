<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
<div class="container">
    <section class="container__block container__block_side">
        <div class="settings">
            <a class="settings__btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="0.7em" height="0.7em" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M6.937 1.291A1 1 0 0 1 8.642 2v12a1 1 0 0 1-1.697.717L3 11H1.25C.56 11 0 10.44 0 9.75v-3.5C0 5.56.56 5 1.25 5H3l3.937-3.709zM14.287 8a5.105 5.105 0 0 0-4.115-4.973l-.021-.007a.862.862 0 0 1 .507-1.646l.303.079A6.821 6.821 0 0 1 16 8a6.821 6.821 0 0 1-5.039 6.547l-.303.079a.861.861 0 0 1-.486-1.653A5.105 5.105 0 0 0 14.287 8zM11 8a1.812 1.812 0 0 0-.952-1.563l-.01-.008a.833.833 0 0 1 .939-1.369l.186.109A3.478 3.478 0 0 1 12.666 8a3.478 3.478 0 0 1-1.503 2.831l-.186.109a.832.832 0 0 1-.939-1.369l.01-.008c.558-.301.94-.887.952-1.563z"/>
                </svg>
            </a>
            <a class="settings__btn info" href="/about">
            </a>
        </div>
    </section>

    <section class="container__block container__block_center">
        <div class="content">
            <h1 class="content__header">profile</h1>
            <div class="avatar">
                <div class="avatar-img js-upload-avatar" src="{params.user.avatar}"/>
                <form class="form js-upload-photo">
                    <div class="change-btn-photo">
                        <label>
                            <input class="btn photo-btn js-change-image" type="file" title="avatar" accept=""/>
                            <div class="btn btn_contained profile__btn js-change-image js-submit-avatar">Change</div>
                        </label>
                    </div>
                </form>
            </div>
            <div class="profile">
                <div class="unit unit_profile inlined js-login-subblock">
                    <h2 class="text-title unit__title unit__title_row">Login:</h2>
                    <div class="profile__row js-login-row">
                        <fest:value>params.user.login</fest:value>
                    </div>
                </div>
                <div class="unit unit_profile inlined js-email-subblock">
                    <h2 class="text-title unit__title unit__title_row">Email:</h2>
                    <div class="profile__row js-email-row">
                        <fest:value>params.user.email</fest:value>
                    </div>
                </div>
                <div class="unit unit_profile inlined js-score-subblock">
                    <h2 class="text-title unit__title unit__title_row">Score:</h2>
                        <div class="profile__score js-score-row">
                            <fest:value>params.user.score</fest:value>
                        </div>
                </div>
                <div class="unit unit_profile columned">
                    <form class="form form_change-password js-change-password js-new">
                        <span class="text-change-password">To change password click</span>
                        <button class="btn btn_change-password js-call-submit" type="submit">here</button>
                    </form>
                </div>
            </div>
            <a class="btn btn_contained btn_back-menu" href="/">Back</a>
        </div>
    </section>
    <section class="modal-window hide">
    </section>
    <section class="container__block container__block_side">
        <div class="users">
            <a class="btn users__btn js-signout" href="/">Sign Out</a>
        </div>
    </section>
</div>
</fest:template>