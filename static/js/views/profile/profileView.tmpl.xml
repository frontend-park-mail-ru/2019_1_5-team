<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
<div class="container">
    <section class="container__block container__block_side">
        <div class="settings">
            <a class="settings__btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="0.7em" height="0.7em" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M6.937 1.291A1 1 0 0 1 8.642 2v12a1 1 0 0 1-1.697.717L3 11H1.25C.56 11 0 10.44 0 9.75v-3.5C0 5.56.56 5 1.25 5H3l3.937-3.709zM14.287 8a5.105 5.105 0 0 0-4.115-4.973l-.021-.007a.862.862 0 0 1 .507-1.646l.303.079A6.821 6.821 0 0 1 16 8a6.821 6.821 0 0 1-5.039 6.547l-.303.079a.861.861 0 0 1-.486-1.653A5.105 5.105 0 0 0 14.287 8zM11 8a1.812 1.812 0 0 0-.952-1.563l-.01-.008a.833.833 0 0 1 .939-1.369l.186.109A3.478 3.478 0 0 1 12.666 8a3.478 3.478 0 0 1-1.503 2.831l-.186.109a.832.832 0 0 1-.939-1.369l.01-.008c.558-.301.94-.887.952-1.563z"/>
              </svg>
            </a>
            <a class="settings__btn" href="/about">
                <svg xmlns="http://www.w3.org/2000/svg" width="0.7em" height="0.7em" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 0c4.415 0 8 3.585 8 8s-3.585 8-8 8-8-3.585-8-8 3.585-8 8-8zm1.331 12a.996.996 0 0 0 0-1.993h-.333v-3.25c0-.443-.239-.757-.68-.757H6.683a1.006 1.006 0 0 0 0 2.01h.312v1.997h-.341a.997.997 0 0 0 0 1.993h2.677zM8 2.658a1.342 1.342 0 1 1 0 2.684 1.342 1.342 0 0 1 0-2.684z"/>
                </svg>
            </a>
        </div>
    </section>

    <section class="container__block container__block_center">
        <div class="content">
            <h1 class="content__header">profile</h1>
            <div class="content-block content-block_avatar">
                <img class="avatar-img js-upload-avatar" src="{params.user.avatar}"/>
                <form class="form js-upload-photo">
                    <div class="change-btn-photo">
                        <label>
                            <input class="btn photo-btn js-change-image" type="file" title="avatar" accept="image/jpeg, image/png"/>
                            <div class="btn btn_contained profile__btn js-change-image js-submit-avatar">Change Avatar</div>
                        </label>
                    </div>
                </form>
            </div>
            <hr class="hr"/>
            <div class="content-block">
                <div class="content-block-unit content-block-unit_profile content-block-unit_profile_line js-login-subblock">
                    <h2 class="text-title content-block-unit__title content-block-unit__title_row">Login:</h2>
                    <div class="content-block-unit_profile__row js-login-row">
                        <fest:value>params.user.login</fest:value>
                    </div>
                </div>
                <div class="content-block-unit content-block-unit_profile content-block-unit_profile_line js-email-subblock">
                    <h2 class="text-title content-block-unit__title content-block-unit__title_row">Email:</h2>
                    <div class="content-block-unit_profile__row js-email-row">
                        <fest:value>params.user.email</fest:value>
                    </div>
                </div>
                <div class="content-block-unit content-block-unit_profile content-block-unit_profile_line js-score-subblock">
                    <h2 class="text-title content-block-unit__title content-block-unit__title_row">Score:</h2>
                        <div class="profile-score js-score-row">
                            <fest:value>params.user.score</fest:value>
                        </div>
                </div>
                <hr class="hr"/>
                <div class="content-block-unit content-block-unit_profile">
                    <form class="form js-change-password js-new">
                        <label class="form__label">
                            <input class="form__input form__input_profile js-password-old" type="password" id="old-password" placeholder="Enter old password"/>
                        </label>
                        <label class="form__label">
                            <input class="form__input form__input_profile js-password-new" type="password" id="new-password" placeholder="Enter new password"/>
                        </label>
                        <button class="btn btn_contained form__btn form__btn_change-password js-button-submit" type="submit">Change password</button>
                        <hr class="hr"/>
                    </form>
                </div>
            </div>
            <div class="content-block content-block_actions">
            </div>

            <a class="btn btn_contained btn_back-menu" href="/">â†© Back</a>
        </div>
    </section>

    <section class="container__block container__block_side">
        <div class="users">
            <a class="btn users__btn js-signout" href="/">Sign Out</a>
        </div>
    </section>
</div>
</fest:template>